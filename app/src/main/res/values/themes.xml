<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ToDo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ToDo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ToDo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Font">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Title" parent="Font">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:paddingStart">@dimen/padding_title_start</item>
        <item name="android:paddingEnd">@dimen/padding_title_end</item>
        <item name="android:paddingTop">@dimen/padding_title_top</item>
        <item name="android:paddingBottom">@dimen/padding_title_bottom</item>
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>

    <style name="Content" parent="Font">
        <item name="android:paddingStart">@dimen/padding_content_start</item>
        <item name="android:paddingEnd">@dimen/padding_content_end</item>
        <item name="android:paddingTop">@dimen/padding_content_top</item>
        <item name="android:paddingBottom">@dimen/padding_content_bottom</item>
        <item name="android:textSize">@dimen/font_size_content</item>
    </style>

    <style name="TaskItemTitle" parent="Font">
        <item name="android:paddingStart">@dimen/padding_item_title_start</item>
        <item name="android:paddingEnd">@dimen/padding_item_title_end</item>
        <item name="android:paddingTop">@dimen/padding_item_title_top</item>
        <item name="android:paddingBottom">@dimen/padding_item_title_bottom</item>
        <item name="android:textSize">@dimen/font_size_item_task_title</item>
    </style>

    <style name="TaskItemContent" parent="Font">
        <item name="android:paddingStart">@dimen/padding_item_content_start</item>
        <item name="android:paddingEnd">@dimen/padding_item_content_end</item>
        <item name="android:paddingTop">@dimen/padding_item_content_top</item>
        <item name="android:paddingBottom">@dimen/padding_item_content_bottom</item>
        <item name="android:textSize">@dimen/font_size_item_task_content</item>
    </style>

</resources>